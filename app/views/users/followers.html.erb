<h1>Follower Users</h1>
<% if @user.followers.any? %>
	<table class="table">
	  <thead>
	    <tr>
	      <th>image</th>
	      <th>name</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>
	  <tbody>
	    <% @user.followers.each do |user| %>
	      <tr>
	        <td><%= attachment_image_tag user, :profile_image, size:"40x40", class: "attachment user profile_image fallback", fallback: "no_image.jpg" %></td>
	        <td><%= user.name %></td>
	        <td>フォロー数：<%= user.follows.count %></td>
	        <td>フォロワー数：<%= user.followers.count %></td>
	        <td><%= link_to "Show", user_path(user) %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
<% else %>
	<p>ユーザーはいません</p>
<% end %>